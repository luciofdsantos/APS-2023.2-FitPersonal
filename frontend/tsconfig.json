{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"],
    "paths": {
      "components/*": ["src/components/*"]
    }
  },
  "include": ["src", "./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules", "build"]
}
